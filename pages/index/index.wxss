@import "../../templates/article.wxss";
@import "../../templates/load-more.wxss";
@import "../../templates/footer.wxss";

.search-panel {
  display: flex;
  flex-direction: row;
  margin-bottom: 32rpx;
  padding: 12rpx 24rpx;
  box-shadow: 0px 1px 2px rgba(0,0,0,.2);
}
.search-input {
  flex: 1;
  align-self: center;
  font-size: 32rpx;
}
.search-icon {
  align-self: center;
}
.bubble {
  position: fixed;
  right: 32rpx;
  width: 96rpx;
  height: 96rpx;
  border-radius: 100%;
  box-shadow: 0px 0px 4px rgba(0,0,0,.2);
  background-color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}
.bubble:not(:last-child) {
  bottom: 160rpx;
}
.bubble:last-child {
  bottom: 32rpx;
}

@media (prefers-color-scheme: dark) {
  .search-panel {
    background-color: #111;
  }
}
@media (prefers-color-scheme: light) {
  .search-panel {
    background-color: #fff;
  }
}
