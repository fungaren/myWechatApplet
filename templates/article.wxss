/* 文章卡片 */
.article {
  margin-bottom: 32rpx;
  box-shadow: 0px 1px 2px rgba(0,0,0,.2);
}
.article-banner {
  width: 100%;
  height: 280rpx;
}
.article-title {
  padding: 12rpx 24rpx;
}
.article-excerpt {
  font-size: 26rpx;
  padding: 12rpx 24rpx;
}
.article-meta {
  padding: 0 24rpx 12rpx 24rpx;
  display: flex;
}
.article-meta text {
  margin-right: 32rpx;
  font-size: 22rpx;
  font-weight: normal;
}

@media (prefers-color-scheme: dark) {
  .article-banner {
    background-color: #444;
  }
  .article-title {
    color: #eee;
  }
  .article-excerpt {
    color: #ddd;
  }
  .article-meta text {
    color: #ddd;
  }
}
@media (prefers-color-scheme: light) {
  .article-banner {
    background-color: #eee;
  }
  .article-title {
    color: #444;
  }
  .article-excerpt {
    color: #777;
  }
  .article-meta text {
    color: #777;
  }
}